# Sweden Bankruptcy Monitoring Agent Configuration
# Copy this file to .env and fill in your values

# ===========================================
# EMAIL CONFIGURATION (Required for notifications)
# ===========================================

# SMTP server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Sender credentials
# For Gmail: Use an App Password (https://support.google.com/accounts/answer/185833)
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password

# Recipients (comma-separated list)
RECIPIENT_EMAILS=recipient1@example.com,recipient2@example.com

# ===========================================
# FILTER CRITERIA (Customize your filters)
# ===========================================

# Employee count filters
FILTER_MIN_EMPLOYEES=5
FILTER_MAX_EMPLOYEES=

# Revenue filters (in SEK)
FILTER_MIN_REVENUE=1000000
FILTER_MAX_REVENUE=

# Business types (SNI codes or descriptions, comma-separated)
# Examples: "Bygg", "IT", "Restaurang", "62", "41"
FILTER_BUSINESS_TYPES=

# Regions (Swedish län, comma-separated)
# Examples: "Stockholms län", "Västra Götalands län", "Skåne län"
FILTER_REGIONS=

# Keywords to exclude (comma-separated)
# Example: "enskild firma", "privatperson"
FILTER_EXCLUDE_KEYWORDS=

# Keywords to include (at least one must match, comma-separated)
FILTER_INCLUDE_KEYWORDS=

# ===========================================
# SCRAPING SETTINGS
# ===========================================

# Run browser in headless mode (recommended for server)
HEADLESS=true

# Delay between requests in seconds (be respectful to servers)
REQUEST_DELAY=1.0

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Request timeout in seconds
TIMEOUT=30

# ===========================================
# DATA STORAGE
# ===========================================

# SQLite database path
DATABASE_PATH=data/bankruptcies.db

# Directory for exported files (CSV, JSON)
EXPORT_PATH=data/exports

# ===========================================
# SCHEDULING
# ===========================================

# Schedule type: "monthly" or cron expression
SCHEDULE=monthly

# Day of month to run (1-28, used when SCHEDULE=monthly)
RUN_DAY_OF_MONTH=1

# ===========================================
# TESTING / DEVELOPMENT
# ===========================================

# Run immediately on startup (for testing)
RUN_NOW=false

# Use mock data instead of real scraping (for testing)
USE_MOCK=false
